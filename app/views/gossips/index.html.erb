<h1>Gossips</h1>
<% if corsaire_signed_in? %>
  <ul>
    <% @gossips.each do |gossip| %>

    <li id="micropost-<%= gossip.id %>"> 
      <span class="content"><%= gossip.content %></span>
      <span class="user">, by <%= gossip.corsaire.anonymous_username %></span>
      <span class="timestamp">
        Posted <%= time_ago_in_words(gossip.created_at) %> ago.
        <% if current_corsaire?(gossip.corsaire) %>
          <%= link_to "delete", gossip, method: :delete %>
        <%end%>
      </span>
    </li>

    <% end %>
  </ul>
<% else %>
  <p>Please <%= link_to "Sign in", new_corsaire_session_path %> or <%= link_to 'Sign up', new_corsaire_registration_path %> if not yet done to see the gossips!</p>
<% end %>